<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutPrincipal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cálculo de Salário"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#EE7674" />

    <!-- Descrição -->
    <TextView
        android:id="@+id/textDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite o seu salário (R$):"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Entrada de salário -->
    <EditText
        android:id="@+id/editSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o seu salário"
        android:inputType="numberDecimal" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/textSubtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Qual será o percentual?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Grupo de opções -->
    <RadioGroup
        android:id="@+id/rbGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="40%"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rb45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="45%"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rb50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="50%"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RadioGroup>

    <!-- Resultado -->
    <TextView
        android:id="@+id/texResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:padding="10dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp" />

    <!-- Botão para calcular -->
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar novo salário"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#EE7674"
        android:onClick="enviar"
        android:textAlignment="center" />

</LinearLayout>
